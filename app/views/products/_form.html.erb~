<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :denominacion %><br />
    <%= f.text_field :denominacion %>
  </div>
  <div class="field">
    <%= f.label :descaripcion %><br />
    <%= f.text_area :descaripcion %>
  </div>
  <div class="field">
    <%= f.label :imagen_url %><br />
    <%= f.text_field :imagen_url %>
  </div>
  <div class="field">
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
